# Build the docker image with `npx nx docker-build cw-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t cw-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cw-api && \
          adduser --system -G cw-api cw-api

COPY apps/cw-api/dist cw-api/
RUN chown -R cw-api:cw-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cw-api --omit=dev -f install

CMD [ "node", "cw-api" ]
